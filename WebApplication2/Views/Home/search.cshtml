@model IEnumerable<WebApplication2.Models.FlightTicket>

@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section class="home-slider owl-carousel">
    <div class="slider-item" style="background-image: url('../../images/tour-5.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text align-items-center">
                <div class="col-md-7 col-sm-12 ftco-animate">
                    <h1 class="mb-3">Search</h1>
                </div>
            </div>
        </div>
    </div>
</section>



<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Location</th>
                <th style="width:10%">checkin_date</th>
                <th style="width:8%">Guest</th>
                <th style="width:22%" class="text-center">checkout date</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>

                <tr>
                    <td data-th="Location">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="../../images/flightImage/@item.flightTicketPicture" alt="..." class="img-responsive" width="200px" height="100px" /></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin">@item.flightDestanation</h4>
                                <p>@Html.DisplayFor(model => item.flightAirCompany)</p>
                            </div>
                        </div>
                    </td>
                    <td data-th="checkin_date">@Html.DisplayFor(model => item.flighGoDate)</td>
                    <td data-th="checkout date" class="text-center">
                        @Html.DisplayFor(model => item.flightTicketQuantity)
                    </td>
                    <td data-th="checkout date" class="text-center">@Html.DisplayFor(model => item.flightBackDate)</td>
                    <td data-th="checkout date" class="text-center">
                        @Html.ActionLink("more details", "flightDetails", "Home", new { id = item.flightID }, null)
                    </td>

                </tr>
            </tbody>
        }
        <tfoot>

            <tr>
                <td>@Html.ActionLink("Contiue Shoping", "Index", "Home")</td>

            </tr>
        </tfoot>


    </table>
</div>